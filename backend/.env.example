# =============================================================================
# NVIDIA DASHBOARD BACKEND - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in ALL REQUIRED values
# App will NOT start if required values are missing!
# =============================================================================

# =============================================================================
# Application Settings (optional - have sensible defaults)
# =============================================================================
APP_NAME=Nvidia Dashboard API
APP_VERSION=1.0.0
DEBUG=true
HOST=0.0.0.0
PORT=8001

# =============================================================================
# PostgreSQL Database Settings - ALL REQUIRED
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=nvidia

# =============================================================================
# Google BigQuery Settings - REQUIRED
# =============================================================================
GCP_PROJECT_ID=turing-gpt
BIGQUERY_DATASET=prod_labeling_tool_n
CONVERSATION_TABLE=conversation
REVIEW_TABLE=review
PROJECT_ID_FILTER=36

# All project IDs (comma-separated)
ALL_PROJECT_IDS=36,37,38,39

# Project names mapping (JSON format)
PROJECT_NAMES_JSON={"36":"Nvidia - SysBench","37":"Nvidia - CFBench Multilingual","38":"Nvidia - InverseIFEval","39":"Nvidia - Multichallenge"}

# Google Cloud credentials path - REQUIRED for BigQuery access
# Download from: https://console.cloud.google.com/iam-admin/serviceaccounts
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account-key.json

# =============================================================================
# API Settings
# =============================================================================
API_PREFIX=/api

# CORS Origins - REQUIRED (comma-separated, no wildcards in production)
CORS_ORIGINS=http://localhost:3001,http://localhost:8001,http://127.0.0.1:3001,http://127.0.0.1:8001

# Pagination (optional)
DEFAULT_PAGE_SIZE=100
MAX_PAGE_SIZE=1000

# =============================================================================
# Data Sync Settings (optional)
# =============================================================================
SYNC_INTERVAL_HOURS=1
INITIAL_SYNC_ON_STARTUP=true

# =============================================================================
# Project Settings - REQUIRED
# =============================================================================
PROJECT_START_DATE=2025-09-26

# =============================================================================
# Rate Limiting Settings (optional)
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=minute
RATE_LIMIT_SYNC_REQUESTS=5
RATE_LIMIT_SYNC_WINDOW=minute

# =============================================================================
# Jibble Integration - Optional (time tracking disabled if not set)
# =============================================================================
# Get credentials from: https://web.jibble.io/settings/integrations/api
JIBBLE_API_KEY=your_jibble_api_key_here
JIBBLE_API_SECRET=your_jibble_api_secret_here
JIBBLE_API_URL=https://workspace.prod.jibble.io/v1
JIBBLE_TIME_TRACKING_URL=https://time-tracking.prod.jibble.io/v1
JIBBLE_TIME_ATTENDANCE_URL=https://time-attendance.prod.jibble.io/v1
JIBBLE_PROJECT_NAME=Nvidia - SysBench

# =============================================================================
# Sentry Error Tracking - Optional (disabled if DSN not set)
# =============================================================================
# Get DSN from: https://sentry.io/settings/projects/{project}/keys/
# SENTRY_DSN=https://your-key@sentry.io/your-project-id
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_SAMPLE_RATE=1.0
